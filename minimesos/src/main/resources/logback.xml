<configuration debug="false">

	<appender name="JAVA" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.out</target>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="CLI" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.containersol.minimesos" level="info">
		<appender-ref ref="CLI"/>
	</logger>

	<logger name="com.containersol.minimesos.integrationtest.container" level="info">
		<appender-ref ref="JAVA"/>
	</logger>

</configuration>
